@model OdeToFood.ViewModels.HomeIndexViewModel

@{
    ViewBag.Title = "Home page";
}

<h1>All restaurants</h1>
<table>
    @foreach (var restaurant in Model.Restaurants)
    {
        <tr>
            <td>@restaurant.Id</td>
            <td>@restaurant.Name</td>
            <td>
                @*<a href="/home/details/@restaurant.Id">Details</a>*@
                @*@Html.ActionLink("Details", "Details", new { id=restaurant.Id })*@
                <a asp-action="Details" asp-route-id="@restaurant.Id">Details</a>
            </td>
        </tr>
    }
</table>
<a asp-action="Create">Add restaurant</a>

@section footer {
    @Model.MessageOfTheDay
}